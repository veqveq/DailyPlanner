<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" stylesheets="@css/main-style.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.veqveq.client.gui.MainController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" text="Delete"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About"/>
        </Menu>
    </MenuBar>
    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button mnemonicParsing="false" text="Button"/>
        <Button mnemonicParsing="false" text="Button"/>
        <Button mnemonicParsing="false" text="Button"/>
        <Button mnemonicParsing="false" text="Button" HBox.hgrow="NEVER"/>
    </HBox>
    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Задачи">
            <Accordion fx:id="accordion">
                <panes>
                    <TitledPane styleClass="title-style,big-title"
                                onMouseClicked="#titledPaneClicked"
                                fx:id="toDay"
                                text="До конца дня">
                        <AnchorPane/>
                    </TitledPane>
                    <TitledPane
                            styleClass="title-style,big-title"
                            onMouseClicked="#titledPaneClicked"
                            text="До конца недели">
                        <AnchorPane/>
                    </TitledPane>
                    <TitledPane
                            styleClass="title-style,big-title"
                            onMouseClicked="#titledPaneClicked"
                            text="До конца месяца">
                        <AnchorPane/>
                    </TitledPane>
                </panes>
            </Accordion>
        </Tab>
        <Tab text="Поручения">
            <AnchorPane>
                <SplitPane dividerPositions="0.3"
                           AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0"
                           AnchorPane.topAnchor="0.0">
                    <AnchorPane SplitPane.resizableWithParent="false">
                        <Label styleClass="title-style,big-title" text="Контакты"
                               AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0"
                               AnchorPane.topAnchor="0.0">
                        </Label>
                    </AnchorPane>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                        <Label styleClass="title-style,big-title" text="Поручения"
                               AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0"
                               AnchorPane.topAnchor="0.0">
                        </Label>
                    </AnchorPane>
                </SplitPane>
            </AnchorPane>
        </Tab>
        <Tab text="Календарь">
            <AnchorPane>
                <DatePicker editable="false"
                            showWeekNumbers="true"
                            AnchorPane.leftAnchor="5.0"
                            AnchorPane.rightAnchor="5.0"
                            AnchorPane.topAnchor="5.0"/>
                <ScrollPane AnchorPane.bottomAnchor="5.0"
                            AnchorPane.leftAnchor="5.0"
                            AnchorPane.rightAnchor="5.0"
                            AnchorPane.topAnchor="35.0">
                    <AnchorPane>
                        <VBox AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="-65.0"
                              AnchorPane.topAnchor="0.0"/>
                    </AnchorPane>
                </ScrollPane>
            </AnchorPane>
        </Tab>
    </TabPane>
</VBox>
