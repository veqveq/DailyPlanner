<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ru.veqveq.nodes.*?>

<fx:root hgap="10" stylesheets="@task-node-style.css" type="javafx.scene.layout.GridPane"
         xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <CheckBox fx:id="checkBox" styleClass="custom-check-box" GridPane.columnIndex="0"/>
    <VBox GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
        <ResizableTextArea fx:id="title" placeholder="Задача"/>
        <ResizableTextArea fx:id="text" placeholder="Комментарий"/>
        <HBox maxHeight="25.0">
            <Label contentDisplay="CENTER" maxHeight="25.0" minWidth="70.0" text="Дедлайн" HBox.hgrow="ALWAYS"
                   VBox.vgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <DatePicker fx:id="deadline" maxHeight="25.0" prefWidth="130.0" showWeekNumbers="true"/>
        </HBox>
    </VBox>
    <GridPane GridPane.columnIndex="2">
        <Button onAction="#edit" styleClass="edit-button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button fx:id="delButton" onAction="#remove" styleClass="delete-button" GridPane.columnIndex="1"
                GridPane.rowIndex="0"/>
        <RepaintButton color="red" fx:id="importantBt" styleClass="imp-button" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
        <RepaintButton color="red" fx:id="quickBt" styleClass="quick-button" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
        <Label GridPane.columnSpan="2" GridPane.rowIndex="2" style="-fx-font-size: 12">Просрочено!</Label>
    </GridPane>
</fx:root>
